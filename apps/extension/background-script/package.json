		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.2",
		"globals": "^15.15.0",
		"jsdom": "^25.0.1",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.34.1",
		"vite": "^6.3.5",
