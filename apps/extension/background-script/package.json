{
	"name": "@eurora/extension-background-script",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"module": "index.ts",
	"main": "index.ts",
	"exports": {
		".": {
			"types": "./index.ts",
			"svelte": "./index.ts"
		}
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
