{
	"name": "@eurora/launcher",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm check --watch",
		"package": "pnpm run --sequential \"/^package:.*/\"",
		"package:svelte": "svelte-kit sync && svelte-package",
		"prepublishOnly": "pnpm run package",
		"prepare": "svelte-kit sync",
		"test": "vitest run --mode development",
		"test:watch": "vitest --watch --mode development"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"type": "module",
	"private": false,
	"peerDependencies": {
		"svelte": "^5.33.3"
	},
	"devDependencies": {
		"@eurora/typescript-config": "workspace:*",
		"@eurora/prosemirror-core": "workspace:*",
		"@eurora/ext-transcript": "workspace:*",
		"@eurora/ui": "workspace:*",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"prettier": "^3.5.3",
		"@lucide/svelte": "^0.511.0",
		"prettier-plugin-svelte": "^3.3.3",
		"postcss": "^8.5.3",
		"postcss-cli": "^11.0.0",
		"@tailwindcss/vite": "^4.1.7",
		"postcss-import": "^16.1.0",
		"@tailwindcss/postcss": "^4.1.8",
		"autoprefixer": "^10.4.21",
		"publint": "^0.3.12",
		"bits-ui": "^2.4.0",
		"svelte": "^5.33.3",
		"svelte-check": "^4.2.1",
		"typescript": "^5.8.3",
		"unified": "^11.0.5",
		"vite": "^6.3.5",
		"vitest": "^3.1.4"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"css": "./dist/index.css"
		}
	}
}
